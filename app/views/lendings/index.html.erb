<h1>貸出一覧</h1>

<table>
  <thead>
    <tr>
      <th>書籍名</th>
      <th>貸出者</th>
      <th>貸出日</th>
      <th>返却予定日</th>
      <th>返却日</th>
      <th>感想</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lendings.each do |lending| %>
      <tr>
        <td><%= lending.media.name %></td>
        <td><%= lending.user.name %></td>
        <td><%= lending.day_borrow %></td>
        <td><%= lending.day_estimated_return %></td>
        <td><%= lending.day_actual_return %></td>
        <td><%= lending.review %></td>
        <td><%= link_to '詳細', lending %></td>
        <td><%= link_to '編集', edit_lending_path(lending) %></td>
        <td><%= link_to '削除', lending, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

