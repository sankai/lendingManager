<h1>貸出一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>書籍名</th>
      <th>貸出者</th>
      <th>貸出日</th>
      <th>返却予定日</th>
      <th>返却日</th>
      <th>感想</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @lendings.each do |lending| %>
      <tr>
        <td><%= lending.media_name %></td>
        <td><%= lending.user_name %></td>
        <td><%= lending.day_borrow %></td>
        <td><%= lending.day_estimated_return %></td>
        <td><%= lending.day_actual_return %></td>
        <td><%= lending.review %></td>
        <td><% if lending.day_actual_return.nil? %>
          <% if lending.user == current_user %>
            <%= link_to '返す', '/lendings/' + lending.id.to_s + '/edit' %>
          <% end %>
        <% end %></td>

      </tr>
    <% end %>
  </tbody>
</table>

