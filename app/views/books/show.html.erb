<p id="notice"><%= notice %></p>

<p>
  <strong>書籍名:</strong>
  <%= @book.name %>
</p>

<p>
  <strong>著者:</strong>
  <%= @book.auhter %>
</p>

<p>
  <strong>ISBN-13:</strong>
  <%= @book.isbn13 %>
</p>

<p>
  <strong>所有者:</strong>
  <%= @book.owner.name %>
</p>

<br>
<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th>借出者</th>
      <th>貸出日</th>
      <th>返却予定日</th>
      <th>返却日</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lendings.each do |lending| %>
      <tr>
        <td><%= lending.user.name %></td>
        <td><%= lending.day_borrow %></td>
        <td><%= lending.day_estimated_return %></td>
        <td><%= lending.day_actual_return %></td>
        <td><% if lending.day_actual_return.nil? %>
          <% if lending.user == current_user %>
            <%= link_to '返す', '/lendings/' + lending.id.to_s + '/edit' %>
          <% end %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

